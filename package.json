{
  "name": "id-2-osm",
  "version": "2.1.2",
  "description": "A restful API for saving and querying osm entities external id's",
  "main": "./src/index.ts",
  "scripts": {
    "test:unit": "jest --config=./tests/configurations/unit/jest.config.js",
    "test:integration": "jest --config=./tests/configurations/integration/jest.config.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint:openapi": "openapi lint ./openapi3.yaml",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js -d ./dataSource.ts",
    "migration:create": "npm run typeorm migration:generate -- -n ",
    "migration:run": "npm run typeorm migration:run",
    "test": "tsc --noEmit -p tsconfig.test.json && npm run test:unit && npm run test:integration",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json && npm run assets:copy",
    "start": "npm run build && cd dist && node --import ./instrumentation.mjs ./index.js",
    "start:dev": "npm run build && cd dist && cross-env CONFIG_OFFLINE_MODE=true  node --enable-source-maps --import ./instrumentation.mjs ./index.js",
    "assets:copy": "copyfiles -f ./config/* ./dist/config && copyfiles -f ./openapi3.yaml ./dist/ && copyfiles ./package.json dist",
    "clean": "rimraf dist",
    "generate:openapi-types": "openapi-helpers ./openapi3.yaml ./src/openapi.d.ts --format --add-typed-request-handler",
    "prepare": "node .husky/install.mjs"
  },
  "directories": {
    "test": "tests"
  },
  "author": "MapColonies",
  "license": "ISC",
  "dependencies": {
    "@godaddy/terminus": "^4.12.1",
    "@map-colonies/config": "^1.3.2",
    "@map-colonies/error-express-handler": "^2.1.0",
    "@map-colonies/express-access-log-middleware": "^2.0.1",
    "@map-colonies/js-logger": "^1.0.1",
    "@map-colonies/openapi-express-viewer": "^3.0.0",
    "@map-colonies/read-pkg": "0.0.1",
    "@map-colonies/schemas": "^1.0.1",
    "@map-colonies/telemetry": "^7.0.1",
    "@opentelemetry/api": "^1.7.0",
    "compression": "^1.7.4",
    "express": "^4.19.2",
    "express-openapi-validator": "^5.0.4",
    "http-status-codes": "^2.2.0",
    "pg": "^8.13.1",
    "prom-client": "^15.1.2",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@faker-js/faker": "^9.3.0",
    "@map-colonies/eslint-config": "^4.0.0",
    "@map-colonies/openapi-helpers": "^1.2.0",
    "@map-colonies/prettier-config": "0.0.1",
    "@redocly/openapi-cli": "^1.0.0-beta.94",
    "@swc/core": "^1.7.26",
    "@swc/jest": "^0.2.36",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.7",
    "@types/pg": "^8.11.10",
    "@types/pg-pool": "^2.0.6",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.3",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "glob": "^11.0.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-create-mock-instance": "^2.0.0",
    "jest-html-reporters": "^3.1.4",
    "jest-openapi": "^0.14.2",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "rimraf": "^5.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.1.3"
  }
}

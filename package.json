{
  "name": "id-2-osm",
  "version": "2.0.0",
  "description": "A restful API for saving and querying osm entities external id's",
  "main": "./src/index.ts",
  "scripts": {
    "test:unit": "jest --config=./tests/configurations/unit/jest.config.js",
    "test:integration": "jest --config=./tests/configurations/integration/jest.config.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint:openapi": "openapi lint ./openapi3.yaml",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "standard-version",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js -d ./dataSource.ts",
    "migration:create": "npm run typeorm migration:generate -- -n ",
    "migration:run": "npm run typeorm migration:run",
    "test": "npm run test:unit && npm run test:integration",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json  && npm run assets:copy",
    "start": "npm run build && cd dist && node ./index.js",
    "assets:copy": "copyfiles -f ./config/* ./dist/config && copyfiles -f ./openapi3.yaml ./dist/ && copyfiles ./package.json dist",
    "clean": "rimraf dist",
    "install": "npx husky install"
  },
  "directories": {
    "test": "tests"
  },
  "author": "MapColonies",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@godaddy/terminus": "^4.10.2",
    "@map-colonies/error-express-handler": "^2.1.0",
    "@map-colonies/express-access-log-middleware": "^1.0.0",
    "@map-colonies/js-logger": "^0.0.4",
    "@map-colonies/openapi-express-viewer": "^2.0.1",
    "@map-colonies/read-pkg": "0.0.1",
    "@map-colonies/telemetry": "^3.1.0",
    "@opentelemetry/api": "^1.0.1",
    "@opentelemetry/api-metrics": "^0.22.0",
    "@opentelemetry/instrumentation-express": "^0.22.0",
    "@opentelemetry/instrumentation-http": "^0.22.0",
    "@opentelemetry/instrumentation-pg": "^0.22.0",
    "compression": "^1.7.4",
    "config": "^3.3.7",
    "express": "^4.18.1",
    "express-openapi-validator": "^4.13.8",
    "http-status-codes": "^2.2.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@map-colonies/eslint-config": "^3.1.1",
    "@map-colonies/prettier-config": "0.0.1",
    "@map-colonies/standard-version-update-helm-version": "^2.0.1",
    "@map-colonies/standard-version-update-openapi3-version": "0.0.2",
    "@redocly/openapi-cli": "^1.0.0-beta.94",
    "@types/compression": "^1.7.2",
    "@types/config": "0.0.41",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/multer": "^1.4.7",
    "@types/pg": "^8.6.5",
    "@types/pg-pool": "^2.0.3",
    "@types/supertest": "^2.0.12",
    "better-sqlite3": "^7.5.3",
    "commitlint": "^17.0.2",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.16.0",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-create-mock-instance": "^2.0.0",
    "jest-html-reporters": "^3.0.8",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.3"
  }
}

{
  "compilerOptions": {
    "target": "es2021",
    "module": "NodeNext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@common/*": ["src/common/*"],
      "@openapi": ["src/openapi"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
